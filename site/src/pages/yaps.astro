---
import Layout from "#/layouts/Layout.astro"
import ButtonA from "#/components/ButtonA.astro"
import H1 from "#/components/typography/h1.astro"
import TextP from "#/components/typography/TextP.astro"
import madLogo from "#/assets/images/mad.png"

const title = "YAPS | Union"
const description = "This is the way"
---

<Layout {title} {description}>
  <div class="bg-zinc-950 min-h-screen">
    <div class="max-w-6xl mx-auto px-4 py-8 md:px-8 md:py-12">
      <!-- Hero Section with Logo -->
      <div class="relative mb-8 mt-4">
        <img 
          src={madLogo.src}
          alt="Mad Logo" 
          class="w-full h-auto object-contain hover:scale-105 transition-transform duration-700"
        />
      </div>

      <!-- Hero Content -->
      <div class="relative group">
        <!-- Orange-yellow gradient glow -->

          <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
            <!-- Video Section -->
            <div class="relative group/video w-full lg:w-2/5 flex-shrink-0">
              <div class="relative aspect-square bg-zinc-900 rounded-lg overflow-hidden ring-1 ring-zinc-800 hover:ring-orange-500/30 transition-all">
                <video
                  id="mad-video"
                  class="w-full h-full object-cover"
                  controls
                  loop
                  muted
                  autoplay
                  playsinline
                >
                  <source
                    src="https://videos.cdn.union.build/mad-yaps-v1.mp4"
                    type="video/mp4"
                  />
                  Your browser does not support the video tag.
                </video>
                
                <!-- Play button overlay for unmuting -->
                <button
                  id="unmute-button"
                  class="absolute inset-0 flex items-center justify-center bg-black/20 hover:bg-black/30 transition-colors cursor-pointer group"
                >
                  <div class="w-20 h-20 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:bg-white/20 transition-colors">
                    <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
                    </svg>
                  </div>
                  <span class="absolute bottom-4 text-white text-sm font-medium bg-black/50 px-3 py-1 rounded-full">
                    Click to unmute
                  </span>
                </button>
              </div>
            </div>

            <!-- Text Content Section -->
            <div class="flex flex-col justify-between w-full">
              <div class="space-y-6">
                <!-- Badge -->
                <div class="relative inline-flex">
                  <div class="absolute inset-0 bg-gradient-to-r from-orange-500/20 to-yellow-500/20 blur-xl"></div>
                  <div class="relative inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-orange-500/10 to-yellow-500/10 border border-orange-500/30 backdrop-blur-sm">
                    <div class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-orange-400 to-yellow-400 animate-pulse"></div>
                    <span class="text-sm font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400 uppercase tracking-wider">New Season</span>
                  </div>
                </div>

                <!-- Main Content -->
                <div class="space-y-4">
                  <H1>This is the way</H1>
                  
                  <TextP>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita vero odit nesciunt sapiente ratione exercitationem! 
                  </TextP>
                  
                  <div class="flex flex-wrap gap-3 text-sm pt-2">
                    <div class="flex items-center gap-2 text-zinc-400">
                      <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      <span>Mad</span>
                    </div>
                    <div class="flex items-center gap-2 text-zinc-400">
                      <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span>100% Sick</span>
                    </div>
                    <div class="flex items-center gap-2 text-zinc-400">
                      <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                      </svg>
                      <span>Pure Chaos</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Action Button -->
              <div class="mt-6">
                <ButtonA href="/" >
                  Get Started
                </ButtonA>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const video = document.getElementById('mad-video') as HTMLVideoElement;
      const unmuteButton = document.getElementById('unmute-button');

      if (video && unmuteButton) {
        unmuteButton.addEventListener('click', () => {
          video.muted = false;
          unmuteButton.remove(); // Completely remove the button from DOM
        });
      }
    });
  </script>
</Layout>
